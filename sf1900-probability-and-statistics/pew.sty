\newcommand*\subsectionlabel{}
\titleformat{\subsection}
  {\gdef\subsectionlabel{}\bfseries}
  {\gdef\subsectionlabel{\thesubsection\ }}{0pt}
  {
    \noindent
    \begin{tikzpicture}
    \node[
        rectangle,
        rounded corners=5pt,
        inner sep=4pt,
        fill=black!10,
        text width= 0.95\columnwidth
    ]{\color{black}\subsectionlabel#1};
    \end{tikzpicture}
  }
\titlespacing*{\subsection}{0pt}{15pt}{2pt}
